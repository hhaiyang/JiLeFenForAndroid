<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/bg_White">
    <FrameLayout 
        android:layout_width="125dp"
        android:layout_height="125dp">        
		<ImageView 
		    android:id="@+id/iv_list_thumb"
		    android:layout_width="125dp"
		    android:layout_height="125dp"
		    android:src="@drawable/ugohb_loading"
		    android:scaleType="centerCrop"/>
		<ImageView 
		    android:id="@+id/iv_list_thumb_int"
		    android:layout_width="75dp"
		    android:layout_height="22dp"
		    android:src="@drawable/shop_mark_10"
		    android:layout_gravity="bottom"
		    android:layout_marginLeft="-2dp"
		    android:scaleType="fitXY"/>
		<TextView
		    android:id="@+id/tv_list_diszhe" 
		    android:layout_width="45dp"
		    android:layout_height="35dp"
		    android:paddingTop="8dp"
		    android:textColor="@color/tv_White"
		    android:gravity="top|left"
		    android:textSize="12sp"
		    android:rotation="-45"
		    android:text="1.5折起"/>
    </FrameLayout>
	<LinearLayout 
	    android:layout_height="match_parent"
	    android:layout_width="0dp"
	    android:layout_weight="1"
	    android:orientation="vertical"
	    android:background="@color/bg_White">
	    <TextView 
	        android:id="@+id/tv_list_item_name"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:padding="5dp"
	        android:textColor="@color/tv_Black"
	        android:text="@string/integral_item_title"/>
	    <TextView 
	        android:id="@+id/tv_list_item_address"
	        android:layout_width="match_parent"
	        android:layout_height="0dp" 
	        android:padding="5dp"
	        android:layout_weight="1"
	        android:textSize="12sp"
	        android:textColor="@color/tv_Gray_9"
	        android:text="@string/integral_item_brief"/>
	    <TextView 
	        android:id="@+id/tv_list_item_newactivity"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:padding="5dp"
	        android:textColor="@color/tv_Pank"
	        android:text="@string/integral_item_title"/>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="2dp"
	        android:background="@drawable/icon_long_line"/>
	    <TextView 
	        android:id="@+id/tv_list_item_integraled"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:paddingRight="5dp"
	        android:gravity="right"
	        android:textColor="@color/tv_Gray_9"
	        android:text="@string/integral_item_title"/>	    
	</LinearLayout>
</LinearLayout>