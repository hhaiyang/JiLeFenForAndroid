<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
   	xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="45dp"
	android:paddingTop="5dp"
	android:paddingBottom="5dp"
    android:orientation="horizontal"
    android:background="@color/bg_White">
    <View android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/bg_Pink"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/integral_zui_second"
        android:textColor="@color/tv_Pank"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_margin="5dp"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/integral_all_shop"
        android:textColor="@color/tv_Gray_9"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_margin="5dp"/>
</LinearLayout>