<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/bg_White"
	android:orientation="vertical">
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:orientation="horizontal"
	    android:background="@color/bg_White">
	    <ImageView 
		    android:id="@+id/iv_cate_back"
		    android:layout_width="32dp"
		    android:layout_height="32dp"
		    android:layout_gravity="center_vertical"
		    android:src="@drawable/arrow_left_black"/>
		<TextView
		    android:id="@+id/tv_cate_search"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:gravity="center_vertical"
		    android:layout_height="match_parent"
		    android:paddingLeft="15dp"
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:layout_marginTop="5dp"
		    android:layout_marginBottom="5dp"
		    android:hint="@string/cate_search_key"
		    android:drawableRight="@drawable/integral_search_btn"
		    android:background="@drawable/integral_search_bg"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"
	    android:orientation="horizontal">
	    <ListView
	        android:id="@+id/lv_cate_main"
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1" 
	        android:background="@color/bg_Gray_light"
			android:listSelector="@color/bg_White"
			android:divider="@color/bg_Gray_light"
			android:scrollbars="none"/>
	    <ListView
	        android:id="@+id/lv_cate_tree"
	        android:layout_height="match_parent"
	        android:layout_width="0dp"
	        android:layout_weight="1.2" 
	        android:background="@color/bg_White"
			android:listSelector="@color/bg_Gray_light"
			android:divider="@color/border_line"
			android:scrollbars="none"/>
	</LinearLayout>

</LinearLayout>