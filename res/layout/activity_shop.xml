<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@color/bg_White">
<FrameLayout 
    android:layout_height="match_parent"
    android:layout_width="match_parent">
	<LinearLayout
	    android:id="@+id/ll_details_caontainer" 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"/>
<com.ugohb.android.ui.ParallaxScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:scrollbars="none"
    android:id="@+id/ParallaxScroll">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout 
            android:id="@+id/fr_top_view"
		    android:layout_height="wrap_content"
		    android:layout_width="match_parent">
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
		        <ImageView
			        android:id="@+id/iv_details_main"
			        android:layout_width="match_parent"
			        android:layout_height="185dp"
			        android:scaleType="centerCrop"
			        android:src="@drawable/splash_hb" />
		        <TextView
		            android:id="@+id/tv_shop_name"
		            android:layout_width="match_parent"
		            android:layout_height="45dp"
		            android:layout_marginRight="65dp"
		            android:padding="10dp"
		            android:singleLine="true"
		            android:textColor="@color/tv_Black"
		            android:textSize="18sp"/>
            </LinearLayout>
            <ImageView
		        android:id="@+id/iv_mark_int"
		        android:layout_width="60dp"
		        android:layout_height="60dp"
		        android:scaleType="centerCrop"
		        android:layout_gravity="right|bottom"
		        android:layout_marginRight="5dp"
		        android:layout_marginBottom="15dp"
		        android:src="@drawable/mark_int_det_0" />
        </FrameLayout>
        <LinearLayout
            android:id="@+id/ll_stage" 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center"/>
    </LinearLayout>    
</com.ugohb.android.ui.ParallaxScrollView>
	<LinearLayout
	    android:id="@+id/ll_details_titlebar_bg"
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:orientation="horizontal"
	    android:alpha="0.0"
	    android:background="@color/bg_Gray_light"/>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    android:orientation="horizontal">
		<ImageView 
		    android:id="@+id/iv_detail_back"
		    android:layout_width="32dp"
		    android:layout_height="32dp"
		    android:layout_gravity="center_vertical"
		    android:src="@drawable/arrow_back"/>
		<TextView
		    android:id="@+id/tv_details_name"
		    android:layout_width="0dp"
		    android:layout_weight="1"
		    android:singleLine="true"
		    android:textColor="@color/tv_Gray_9"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="15dp"
		    android:layout_marginRight="15dp"
		    android:layout_gravity="center_vertical"
		    android:gravity="center"
		    android:textSize="14sp"/>
		<ImageView 
		    android:id="@+id/iv_details_share"
		    android:layout_width="32dp"
		    android:layout_height="32dp"
		    android:layout_gravity="center_vertical"
		    android:src="@drawable/icon_share"/>
	</LinearLayout>

</FrameLayout>
</RelativeLayout>